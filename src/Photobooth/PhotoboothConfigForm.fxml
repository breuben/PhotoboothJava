<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>
<GridPane fx:id="containerPane" alignment="CENTER" hgap="10.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="Photobooth.PhotoboothConfigController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Label text="Capture Directory:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
    <TextField fx:id="CaptureDirectory" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Capture Extension:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
    <TextField fx:id="CaptureExtension" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Preview Seconds:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2"/>
    <TextField fx:id="PreviewSeconds" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Font:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3"/>
    <TextField fx:id="FontName" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Font Size:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="4"/>
    <TextField fx:id="FontSize" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Prompt Text:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="5"/>
    <TextArea fx:id="PromptText" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Button fx:id="btnStartKiosk" minWidth="75.0" onMouseClicked="#StartKiosk_OnClicked" text="Start Kiosk"
            GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
</GridPane>